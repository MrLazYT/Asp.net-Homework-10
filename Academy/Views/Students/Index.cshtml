@{
}

@model List<Student>

<div class="container">
    <a class="btn btn-primary m-1" asp-controller="Students" asp-action="Add">Add Student</a>

    <table class="table m-1">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Group</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Student student in Model)
            {
                <tr>
                    <th>@student.Id</th>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Age</td>
                    <td>@student.Group</td>
                    <td>
                        <a class="btn btn-primary m-1" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                        <a class="btn btn-danger m-1" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>